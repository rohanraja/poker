<%- model_class = Round -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pot) %>:</strong></dt>
  <dd><%= @round.pot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:big_blind) %>:</strong></dt>
  <dd><%= @round.big_blind %></dd>
  <dt><strong><%= model_class.human_attribute_name(:small_blind) %>:</strong></dt>
  <dd><%= @round.small_blind %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_value) %>:</strong></dt>
  <dd><%= @round.call_value %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rounds_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_round_path(@round), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              round_path(@round),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
